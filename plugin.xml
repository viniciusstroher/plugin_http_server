<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
           id="cordova-plugin-rtsp-w3"
      version="1.0">
    <name>HTTP SERVER</name>
    <description>HTTP SERVER Plugin</description>
    <license>Apache 2.0</license>
    <keywords>HTTP SERVER</keywords>

    <engines>
        <engine name="cordova-android" version=">=3.6.0" /><!-- Requires CordovaPlugin.preferences -->
    </engines>

    <js-module src="www/module.js" name="Httpd">
        <!-- acessa como navigator.RtspW3 -->
        <clobbers target="navigator.httpd" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <!-- NOME QUE O cordova exec vai chamar e o mapa da classe principal-->
            <feature name="Httpd">
                <param name="android-package" value="org.apache.cordova.httpd.Httpd"/>
                <param name="onload" value="true"/>
            </feature>
        </config-file>

        <!-- configuracoes de activity -->
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            
            <!--<activity android:label="HTTPD" android:name="org.apache.cordova.httpd.RtspW3Activity">
            </activity>

            <activity android:name="io.vov.vitamio.activity.InitActivity" 
       android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden"
       android:launchMode="singleTop"
        android:theme="@android:style/Theme.NoTitleBar"
        android:windowSoftInputMode="stateAlwaysHidden"/>     
        </config-file>-->

        <config-file target="AndroidManifest.xml" parent="/manifest">
            
                <uses-permission android:name="android.permission.INTERNET" />
                <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
                <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
                <uses-permission android:name="android.permission.WAKE_LOCK" />
                <uses-permission android:name="android.permission.RECORD_AUDIO" />
                <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>
        <!-- configuracoes de activity -->

        <!-- classes -->
        <source-file src="src/android/FakeR.java"          target-dir="src/org/apache/cordova/httpd" />
        <source-file src="src/android/Httpd.java"         target-dir="src/org/apache/cordova/httpd" />
        <!--<source-file src="src/android/RtspW3Activity.java" target-dir="src/org/apache/cordova/httpd" />-->
        <!-- classes -->

        <!-- templates -->
        <source-file src="src/android/res/layout/rtsp_w3_activity.xml" target-dir="res/layout"/>
        <!-- templates -->
        
        <!-- gradle para baixa as dependencias -->
        <framework src="build.gradle" custom="true" type="gradleReference" />

    </platform>

    

